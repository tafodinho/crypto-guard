<div class="h-screen flex w-full">
	<div class="hidden lg:flex w-full lg:w-1/2 login_img_section justify-around items-center">
		<div class="  bg-black opacity-20 inset-0 z-0">
		</div>
		<div class="flex w-full mx-auto px-20 flex-col items-center space-y-6">
			<h1 class="text-white font-bold text-4xl font-sans">Crypto Guard</h1>
			<p class="text-white mt-1">Your Crypto Trading Helper</p>
			<div class="flex justify-center lg:justify-start mt-6">
				<%= link_to "Login Instead", new_session_path(resource_name), class: "hover:bg-indigo-700 hover:text-white hover:-translate-y-1 transition-all duration-500 bg-white text-indigo-800 mt-4 px-4 py-2 rounded-md font-bold mb-2" %>
			</div>
		</div>
	</div>
	<div class="flex w-full justify-center lg:w-1/2 items-center bg-white space-y-8">
		<% if flash[:notice] %>
			<div class="trls flex justify-around  w-full lg:w-1/2 top-0  p-4 mb-4 text-sm text-blue-800  bg-blue-50 dark:bg-gray-800 dark:text-blue-400" role="alert">
				<%= notice %>
			</div>
		<% end %>
		<% if flash[:alert] %>
			<div class="fixed flex justify-around  w-full lg:w-1/2 top-0  p-4 mb-4 text-sm text-red-800  bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
				<%= alert %>
			</div>
		<% end %>
		<div class="w-[70%] px-8 ">
			<h1 class="text-center text-gray-800 font-bold text-2xl mb-1">Create Account!</h1>
			<p class="text-center text-sm font-normal text-gray-600 mb-8">Enter your details Below to create a new account</p>
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "bg-white rounded-md shadow-2xl p-5 max-w-90") do |f| %>
				<div class="flex items-center border-2 mb-8 py-2 px-3 rounded-md">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
					</svg>
					<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "pl-2 w-full outline-none border-none", placeholder: "Email Address" %>
				</div>
				<div class="flex items-center border-2 mb-5 py-2 px-3 rounded-md">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
						<path fillRule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clipRule="evenodd" />
					</svg>
					<%= f.password_field :password, autocomplete: "new-password", class: "pl-2 w-full outline-none border-none", placeholder: "Password"  %>
				</div>
				<div class="flex items-center border-2 mb-5 py-2 px-3 rounded-md">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
						<path fillRule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clipRule="evenodd" />
					</svg>
					<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "pl-2 w-full outline-none border-none", placeholder: "Confirm Password"  %>
				</div>
				<%= f.submit "Sign Up", class: "block w-full bg-indigo-600 mt-5 py-3 rounded-md hover:bg-indigo-700 hover:-translate-y-1 transition-all duration-500 text-white font-semibold mb-2" %>
			<% end %>
			<div class="relative flex py-5 items-center">
				<div class="flex-grow border-t border-gray-400"></div>
				<span class="flex-shrink mx-4 text-gray-400 text-sm">Or, SignUp with</span>
				<div class="flex-grow border-t border-gray-400"></div>
			</div>
			<%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: "false" }, class: "flex justify-center items-center w-full bg-transparent mt-2 py-3 border-2 rounded-md hover:bg-gray-50 hover:-translate-y-1 transition-all duration-500 text-gray-600 font-semibold mb-2" do %>
				<div class="w-6 h-6 mr-4">
					<%= render inline: Rails.root.join('app/assets/images/logos/google-g-2015.svg').read %>
				</div>
				Sign Up with google
			<% end %>
			<div class="flex justify-between mt-4">
				<%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm ml-2 hover:text-blue-500 cursor-pointer hover:-translate-y-1 duration-500 transition-all" %><br />
				<%= link_to "Already have an account?", new_session_path(resource_name), class: "text-sm ml-2 hover:text-blue-500 cursor-pointer hover:-translate-y-1 duration-500 transition-all" %>
			</div>
		</div>
	</div>
</div>