<turbo-frame id="content">
	<%= render "settings" do %>
		<div class="p-8 mt-4 bg-white rounded-md">
			<p class="uppercase font-semibold text-gray-700 mb-4 text-lg">Billing</p>
			<div class="mb-8">
				<h2 class="font-semibold">Current Plan</h2>
				<p class="text-sm text-gray-600">You are currently subscribed to the <span class="font-semibold"><%= current_plan %></span> plan and your subscription is <span class="font-semibold"> <%= subscription_status%> </span></p>
			</div>
			<div class="flex justify-between items-center mb-8">
				<div>
					<p class="font-semibold">Manage your subscription</p>
					<p class="text-sm text-gray-600">View your previous invoices, edit your billing details, or cancel your subscription.</p>
				</div>
				<%= button_to 'Go to Billing Portal', billing_portal_path, method: :post, data: { turbo: false }, class: "bg-blue-100 px-4 py-2 rounded-sm text-blue-700" %>
			</div>
			<div class="flex justify-between items-center">
				<div>
					<p class="font-semibold">Need Help?</p>
					<p class="text-sm text-gray-600">Do you face any issues in billing? We are here to help.</p>
				</div>
				<%= button_to 'Chat with Us', "#", class: "bg-blue-100 px-4 py-2 rounded-sm text-blue-700" %>
			</div>
		</div>
	</div>
<% end %>
</turbo-frame>